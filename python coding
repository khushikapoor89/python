# Comments
# Comments are used for explanations in the code.

# Variables
example_variable = 42
print("Example Variable:", example_variable)

# Data Types
integer_variable = 10
float_variable = 3.14
string_variable = "Hello, Python!"

print("Integer Variable:", integer_variable)
print("Float Variable:", float_variable)
print("String Variable:", string_variable)

# Print Statement
print("Hello, World!")

# Indentation
if integer_variable > 5:
    print("Integer is greater than 5")
else:
    print("Integer is not greater than 5")

# Lists
my_list = [1, 2, 3, "Python"]
print("My List:", my_list)

# Loops
for item in my_list:
    print(item)

# List Operations
my_list = [1, 2, 3, 4, 5]
print("Original List:", my_list)
print("First Element:", my_list[0])
print("Last Element:", my_list[-1])
print("Slicing:", my_list[1:4])

my_list[2] = 10
print("Modified List:", my_list)

my_list.append(6)
print("After Append:", my_list)

my_list.extend([7, 8, 9])
print("After Extend:", my_list)

my_list.insert(2, 20)
print("After Insert:", my_list)

my_list.remove(4)
print("After Remove:", my_list)

popped_element = my_list.pop()
print("Popped Element:", popped_element)
print("After Pop:", my_list)

index_of_5 = my_list.index(5)
print("Index of 5:", index_of_5)

is_present = 3 in my_list
print("Is 3 Present?", is_present)

my_list.sort()
print("Sorted List:", my_list)

my_list.reverse()
print("Reversed List:", my_list)

length = len(my_list)
print("Length of List:", length)

copied_list = my_list.copy()
print("Copied List:", copied_list)

# Functions
def greet(name):
    print("Hello, " + name + "!")
greet("User")

# List Comprehension
squares = [num**2 for num in range(1, 6)]
print("Squares:", squares)

# While Loop
counter = 1
while counter <= 5:
    print(counter)
    counter += 1

# Palindrome Finder
number = 121
original_number = str(number)
if original_number == original_number[::-1]:
    print(original_number, "is a palindrome number.")
else:
    print(original_number, "is not a palindrome number.")
